{
  "name": "Bookmark Grid Tab",
  "description": "Reborn of Chrome extension Favorites",
  "version": "0.0.1",
  "manifest_version": 3,
  "host_permissions": ["*://*/"],
  "permissions": [
    "activeTab",
    "contextMenus",
    "bookmarks",
    "storage",
    "unlimitedStorage"
  ],
  "chrome_url_overrides": {
    "newtab": "/index.html#/?target=new-tab"
  },
  "action": {
    "default_popup": "/index.html#/?target=popup#/popup"
  },
  "options_page": "/index.html#/?target=popup",
  "background": {
    "service_worker": "background_runtime.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js", "runtime.js"]
    }
  ]
}
